    <title>OurGoal</title>
  </head>
  <body>
    <div class="justify-content-center">
      <%= render partial: 'common/header' %>
        <div class="row" style="background:#b0c4de">
            <button type="button" class="btn btn-primary">Hello, world!</button>
          
            <%= yield %>
            <p class="alert"><%= alert %></p>
        </div>
    </div>
